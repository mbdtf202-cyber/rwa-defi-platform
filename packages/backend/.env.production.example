# Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rwa_platform_prod
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=true

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_REFRESH_EXPIRATION=7d

# Blockchain
BLOCKCHAIN_NETWORK=arbitrum
BLOCKCHAIN_RPC_URL=https://arb1.arbitrum.io/rpc
CHAIN_ID=42161
PRIVATE_KEY=your_private_key_without_0x

# Contract Addresses (Update after deployment)
TIMELOCK_ADDRESS=0x...
SPV_REGISTRY_ADDRESS=0x...
PERMISSIONED_TOKEN_ADDRESS=0x...
ORACLE_AGGREGATOR_ADDRESS=0x...
VAULT_ADDRESS=0x...
TRANCHE_FACTORY_ADDRESS=0x...
PERMISSIONED_AMM_ADDRESS=0x...
LENDING_POOL_ADDRESS=0x...
DOCUMENT_REGISTRY_ADDRESS=0x...

# IPFS
IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROTOCOL=https
IPFS_PROJECT_ID=your_infura_project_id
IPFS_PROJECT_SECRET=your_infura_project_secret

# KYC Providers
SUMSUB_APP_TOKEN=your_sumsub_app_token
SUMSUB_SECRET_KEY=your_sumsub_secret_key
SUMSUB_BASE_URL=https://api.sumsub.com

# Payment Gateway
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
CIRCLE_API_KEY=your_circle_api_key

# Fireblocks Custody
FIREBLOCKS_API_KEY=your_fireblocks_api_key
FIREBLOCKS_API_SECRET_PATH=/path/to/fireblocks_secret.key
FIREBLOCKS_VAULT_ACCOUNT_ID=0

# Oracle Services
CHAINLINK_NODE_URL=https://your-chainlink-node.com
ORACLE_UPDATE_INTERVAL=3600

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@rwa-platform.com

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=https://app.rwa-platform.com,https://www.rwa-platform.com

# Security
HELMET_ENABLED=true
CSRF_ENABLED=true

# ML Services
ML_SERVICE_URL=http://ml-services:8000
ML_SERVICE_TIMEOUT=30000

# Feature Flags
ENABLE_KYC=true
ENABLE_PAYMENTS=true
ENABLE_CUSTODY=true
ENABLE_ORACLE=true
